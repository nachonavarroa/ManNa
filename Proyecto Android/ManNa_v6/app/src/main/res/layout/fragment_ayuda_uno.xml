<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorFondo2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio" />

        <TextView
            android:id="@+id/textView8"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Al iniciar la aplicación puedes condede los permisos para que se puedea almacenar archivos multimedia y pdf." />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ayu_pedir_permisos2" />


        <TextView
            android:id="@+id/textView"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para poder acceder a la aplicación tienes que loguearte con el usuario y contraseña que se te ha asignado, si todavia no tienes usuaeio ponte en contacto con el administrador del sistema." />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ayu_login" />

        <TextView
            android:id="@+id/textView5"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduce tu usuario y contraseña y ya puedes acceder a la aplicación"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ayu_login2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahora ya puedes crear las órdenes de trabajo"/>


        <ImageView
            android:id="@+id/imageView7"
            android:layout_marginTop="16dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ayu_inicio" />



    </LinearLayout>


</ScrollView>

